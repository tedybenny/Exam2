<Window x:Class="Exam2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel >
                <TextBlock>Логин</TextBlock>
                <TextBox x:Name="login" Width="200">Adam@gmai.com</TextBox>
            </StackPanel>
            <StackPanel >
                <TextBlock >Пароль</TextBlock>
                <PasswordBox PasswordChar="*" Width="200" x:Name="password" Password="7SP9CV"></PasswordBox>
            </StackPanel>
            <StackPanel x:Name="captchaStack" Visibility="Collapsed" >
                <TextBlock>Введите Капчу</TextBlock>
                <TextBlock x:Name="captchaText"></TextBlock>
                <TextBox x:Name="captchaInput"></TextBox>
            </StackPanel>
            <Button  Click="Login" Background="#FFFF9C1A">Войти</Button>

        </StackPanel>

    </Grid>
</Window>
